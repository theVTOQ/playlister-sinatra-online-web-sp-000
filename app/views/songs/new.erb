<h1>Create a New Song:</h1>
<form action="/songs" method="POST">
  <label for="song_name">Name:</label>
  <input type="text" id="song_name" name="song[name]">

  <h2>Enter the Artist's Name:</h2>
  <input type="text" id="Artist Name" name="artist[name]" placeholder="Artist Name:">

  <h3>Genre:</h3>
  <% @genres.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" name="song[genre_ids][]" value=<%= genre.id %>>
      <%= genre.name %>
    </input><br>
  <% end %>

  <input type="submit" value="Create Song">
</form>
